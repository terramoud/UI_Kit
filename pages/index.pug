include ../Common.blocks/color-example/color-example.pug
include ../Common.blocks/uikit-logo/uikit-logo.pug
include ../Common.blocks/container/container.pug


doctype html
html
    head
        title UI Kit
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        meta(name='HandheldFriendly' content='true')
        meta(name='MobileOptimized' content='width')


    body
        +container

            // Colors & Type
            +container__layout({theme: 'colors-fonts'})

                +container__layout-logo
                    +uikit-logo

                +container__layout-examples

                    +container__layout-colors
                        -let colorsExampleArr = [['dark-100','Dark Shade 100%', '#1F2041'],
                        -                        ['dark-75', 'Dark Shade 75%', '#1F2041'],
                        -                        ['dark-50', 'Dark Shade 50%', '#1F2041'],
                        -                        ['dark-25', 'Dark Shade 25%', '#1F2041'],
                        -                        ['dark-05', 'Dark Shade 5%', '#1F2041'],
                        -                        ['purple', 'Purple', '#BC9CFF'],
                        -                        ['green', 'Green', '#6FCF97']];
                        each val, key in colorsExampleArr
                            +color-example({font: 'bold', text: 'green'},{theme: val[0], colorName: val[1], hexColor: val[2]})

                    +container__layout-fonts
                        -let fontExample = [['H1','This one is the sub-section or widget title'],
                        -                   ['H2', 'Next one is the item title inside widgets'],
                        -                   ['H3', 'This is a label or CTA text'],
                        -                   ['Body', 'This is the body text which is used for most of the design, like paragraphs, lists, etc.']];
                        each val, key in fontExample
                            +font-example({},{tagName: val[0], fontExampleName: val[1]})



            // Form Elements
            +container__layout({theme: 'form-elements'})

                +container__layout-logo
                    +uikit-logo

                +form-elements
                    +form-elements__left-col
                        +form-elements__corrective-wrapper

                            +form-elements__component-wrapper
                                +text-field({}, {fieldType: 'text field', fieldState: 'default'})
                                    +input(type='text' placeholder='Email')


                            +form-elements__component-wrapper
                                +text-field({}, {fieldType: 'text field', fieldState: 'Hover / Focus'})
                                    +input({selected: 'input'})(type='text' placeholder='This is pretty awesome')


                            +form-elements__component-wrapper
                                +text-field({}, {fieldType: 'text field', fieldState: 'Hover / Focus'})
                                    +dropdown-guests(multiple='multiple',
                                                     id="DropdownGuests",
                                                     name='DropdownGuests',
                                                     size='3'
                                                     data-option-value=['adults', 'children', 'babies']
                                                     data-option-content=['взрослые', 'дети', 'младенцы'])


                            +form-elements__component-wrapper
                                +text-field({}, {fieldType: 'text field', fieldState: 'Hover / Focus'})
                                    +input(type='date', placeholder='ДД.ММ.ГГГГ')


                            +form-elements__component-wrapper({theme: 'datepicker'})
                                +dropdown-datepicker({}, {
                                  iconTag: 'i',
                                  iconClass: 'material-icons',
                                  iconContent: 'expand_more'
                                })


                            +form-elements__component-wrapper({theme: 'filter-datepicker'})
                                +text-field({}, {fieldType: 'filter date dropdown'})
                                    +filter-datepicker


                        +form-elements__component-wrapper({theme: 'subscr-field'})
                            +text-field({}, {fieldType: 'subscription text field'})
                                +subscr-field({}, {
                                  iconTag: 'i',
                                  iconClass: 'material-icons',
                                  iconContent: 'arrow_forward'
                                })


                        +form-elements__component-wrapper({theme: 'dropdown-facilities'})
                            +text-field({}, {fieldType: 'dropdown', fieldState: 'default'})
                                +dropdown-facilities(
                                  multiple='multiple',
                                  id="dropdownFacilities",
                                  name='dropdownFacilities',
                                  size='3',
                                  data-option-value=['bedrooms', 'beds', 'bathrooms'],
                                  data-option-content=['спальни', 'кровати', 'ванные комнаты'],
                                  data-option-declension=[
                                    ['спален', 'спальня', 'спальни'],
                                    ['кроватей', 'кровать', 'кровати'],
                                    ['ванных комнат', 'ванная комната', 'ванные комнаты']
                                  ]
                                )


                        +form-elements__component-wrapper({theme: 'facilities-expanded'})
                            +text-field({}, {fieldType: 'dropdown', fieldState: 'expanded'})
                                +dropdown-facilities(
                                  multiple='multiple',
                                  id="dropdownFacilitiesExpanded",
                                  name='dropdownFacilities',
                                  size='3',
                                  data-option-value=['bedrooms', 'beds', 'bathrooms'],
                                  data-option-content=['спальни', 'кровати', 'ванные комнаты'],
                                  data-option-declension=[
                                    ['спален', 'спальня', 'спальни'],
                                    ['кроватей', 'кровать', 'кровати'],
                                    ['ванных комнат', 'ванная комната', 'ванные комнаты']
                                  ]
                                )


                        +form-elements__component-wrapper({theme: 'closed-dropdown-list'})
                            +checkbox-list({}, {
                              isExpandable: 'true',
                              checkboxListTitle: 'expandable checkbox list',
                              iconTag: 'i',
                              iconClass: 'material-icons',
                              iconContent: 'expand_more'
                            })
                                +list({}, {
                                  contentOfItems: [
                                    'Завтрак',
                                    'Письменный стол',
                                    'Стул для кормления',
                                    'Кроватка',
                                    'Телевизор',
                                    'Шампунь'
                                  ]
                                })


                        +form-elements__component-wrapper({theme: 'dropdown-list'})
                            +checkbox-list({}, {
                              isExpandable: 'true',
                              checkboxListTitle: 'expandable checkbox list',
                              iconTag: 'i',
                              iconClass: 'material-icons',
                              iconContent: 'expand_more'
                            })
                                +list({}, {
                                  contentOfItems: [
                                    'Завтрак',
                                    'Письменный стол',
                                    'Стул для кормления',
                                    'Кроватка',
                                    'Телевизор',
                                    'Шампунь'
                                  ]
                                })


                        // Room details
                        +form-elements__component-wrapper({theme: 'room-details'})
                            +room-details({}, {
                              iconTag: 'i',
                              iconClass: 'material-icons',
                              contentsOfRoomDetails: [{
                                iconRoomDetails: 'insert_emoticon',
                                titleRoomDetails: 'Комфорт',
                                descriptionRoomDetails: 'Шумопоглощающие стены'
                              }, {
                                iconRoomDetails: 'location_city',
                                titleRoomDetails: 'Удобство',
                                descriptionRoomDetails: 'Окно в каждой из спален'
                              }]
                            })


                    +form-elements__big-col
                        +form-elements__columns-wrapper

                            +form-elements__middle-col


                                // Checkbox Buttons
                                +form-elements__component-wrapper({theme: 'checkbox-buttons'})
                                    +checkbox-list({}, {
                                      checkboxListTitle: 'Checkbox Buttons'
                                    })
                                        +list({}, {
                                          contentOfItems: [
                                            'Можно курить',
                                            'Можно с питомцами',
                                            'Можно пригласить гостей (до 10 человек)'
                                          ]
                                        })