
mixin filter-datepicker__icon(modifiers, ...argsArr)
    -let modifierNames = '';
    -let args = (argsArr[0] !== undefined) ? argsArr[0] : {};
    -if (args.tag === undefined) args.tag = 'div';
    -if (modifiers === undefined) modifiers = '';
        each val, key in modifiers
            -if (val !== undefined) modifierNames += 'filter-datepicker__icon_' + key + '_' + val + ' ';
    #{args.tag}.filter-datepicker__icon&attributes(attributes)(class=modifierNames)
        #{args.tag}(class=args.iconClass) #{args.iconContent}
        if block
            block