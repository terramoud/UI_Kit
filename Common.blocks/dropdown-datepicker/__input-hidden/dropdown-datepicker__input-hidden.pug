
mixin dropdown-datepicker__input-hidden(modifiers, ...argsArr)
    -let modifierNames = '';
    -let args = (argsArr[0] !== undefined) ? argsArr[0] : {};
    -if (args.tag === undefined) args.tag = 'input';
    -if (modifiers === undefined) modifiers = '';
        each val, key in modifiers
            -if (val !== undefined) modifierNames += 'dropdown-datepicker__input-hidden_' + key + '_' + val + ' ';
    #{args.tag}.dropdown-datepicker__input-hidden&attributes(attributes)(class=modifierNames)
        if block
            block