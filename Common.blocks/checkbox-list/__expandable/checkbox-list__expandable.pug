
mixin checkbox-list__expandable(modifiers, ...argsArr)
    -let modifierNames = '';
    -let args = (argsArr[0] !== undefined) ? argsArr[0] : {};
    -if (args.tag === undefined) args.tag = 'div';
    -if (modifiers === undefined) modifiers = '';
        each val, key in modifiers
            -if (val !== undefined) modifierNames += 'checkbox-list__expandable_' + key + '_' + val + ' ';
    #{args.tag}.checkbox-list__expandable&attributes(attributes)(class=modifierNames)
        if block
            block